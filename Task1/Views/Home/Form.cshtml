@model Task1.Models.item
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Kaydet", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.not)
        @Html.TextBoxFor(m => m.not, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.tarih)
        @Html.TextBoxFor(m => m.tarih, new { @class = "form-control", type = "datetime-local" })
    </div>

    @Html.HiddenFor(m => m.id)
    <button type="submit" class="btn btn-success">Kaydet</button>

}




